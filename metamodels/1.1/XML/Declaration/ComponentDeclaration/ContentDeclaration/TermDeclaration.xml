<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<class name="TermDeclaration" parent="ContentDeclaration" tag="term">
	<description>Declaración de un término</description>

	<attribute name="code" type="string" required="true">
		<description>Código del término</description>
	</attribute>
  
	<attribute name="label" type="string" required="true">
		<description>El término en si</description>
	</attribute>
  
	<include name="term" multiple="true">
		<option class-name="TermDeclaration" />
	</include>

</class>

