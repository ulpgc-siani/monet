<class name="ReferenceViewDeclaration" parent="ViewDeclaration" tag="view">
  <description>Declaración de una vista de una referencia</description>

  <property name="is-default">
    <description>Su presencia indica que es la vista por defecto</description>
    <hint>Debe ser de tipo tab</hint>
  </property>
  
  <property name="show" multiple="true">
    <description>Se utiliza para indicar que atributos se van a mostrar en la vista</description>
