<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/field_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_picture_height"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/clear_editor"
        android:contentDescription="@string/pick_position_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_empty_picture" />
    
    <Button
        android:id="@+id/pick_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_picture_height"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/clear_editor"
        android:contentDescription="@string/pick_position_content_description"
        android:background="@drawable/spinner_background" />
    
    <include android:id="@+id/clear_editor"
             layout="@layout/widget_delete_button" />

</RelativeLayout>