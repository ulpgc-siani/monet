<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Monet.Theme.Light.NoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

    <style name="formTitle">
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:tag">Light</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/form_title_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="formSubtitle">
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:tag">Thin</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/form_subtitle_text_size</item>
    </style>

    <style name="loadingText">
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="formSubtitleSingleLine" parent="formSubtitle">
        <item name="android:maxLines">1</item>
    </style>

    <style name="sectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/text_content_margin</item>
        <item name="android:textColor">#9933CC</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sectionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sectionTextUrl" parent="sectionText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="microText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tableLabelText" parent="microText">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tableDateText" parent="microText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="tableNoDateText" parent="tableDateText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="buttonWithIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="datesTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
    </style>

    <style name="datesTableRow">
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="editorSectionHeader" parent="sectionHeader">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="editorMemo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editorText" parent="editorMemo">
        <item name="android:lines">1</item>
    </style>

    <style name="formLogin">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="editorPositionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editorSelectText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_content_margin</item>
        <item name="android:layout_marginRight">@dimen/text_content_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editorPositionSubText" parent="editorPositionText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="listEmptyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="listItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
    </style>

    <style name="listItemLoading">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="listItemLoadingText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/loading_more_items</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    
    <style name="dialogbutton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#5c5966</item>
    </style>

</resources>