@content.state$pending
<div class="title">El trabajo está pendiente de ser asignado.</div>

@content.state$pending.owner
<div class="title">::fullname:: está realizando el trabajo.</div>

@content.state$finished
<div class="title">El trabajo ha finalizado.</div>

@content.state$finished.owner
